<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/weather_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        android:elevation="2dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#FFFFFF"
        tools:ignore="NewApi">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">
            <TextView
                android:id="@+id/kota_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Bandung"
                android:fontFamily="sans-serif-condensed"
                android:textSize="30sp"
                android:textColor="#838EAB"/>
            <TextView
                android:id="@+id/cuaca_history"
                android:layout_below="@+id/kota_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Mostly Cloudly"
                android:fontFamily="sans-serif-medium"
                android:textSize="12sp"
                android:textColor="#838EAB"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"/>
            <TextView
                android:id="@+id/suhu_history"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:text="25"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#838EAB"
                android:textSize="50sp"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/tanggal_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="9dp"
                android:layout_below="@id/cuaca_history"
                android:text="7 November 2019 10:30"
                android:fontFamily=""
                android:textSize="9sp"
                android:textColor="#505276"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>